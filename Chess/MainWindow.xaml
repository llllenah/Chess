<Window x:Class="ChessTrainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessTrainer"
        mc:Ignorable="d"
        Title="ChessTrainer" Height="800" Width="1200"
        MinHeight="600" MinWidth="800">
    <Window.Resources>
        <local:PieceConverter x:Key="PieceConverter" />
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
    </Window.Resources>

    <Grid  x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="600"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Piece selection panels -->
        <StackPanel x:Name="WhitePiecePanel" Orientation="Horizontal" Grid.Row="0" Grid.Column="0" 
                   Margin="10" Visibility="Collapsed"/>
        <StackPanel x:Name="BlackPiecePanel" Orientation="Horizontal" Grid.Row="0" Grid.Column="0" 
                   Margin="250,10,10,10" Visibility="Collapsed"/>

        <!-- Chess board -->
        <ItemsControl x:Name="ChessBoardItemsControl" ItemsSource="{Binding Board}" Grid.Row="1" Grid.Column="0">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="8" Columns="8"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="{Binding Background}" AllowDrop="True"
                            DragEnter="BoardCell_DragEnter" Drop="BoardCell_Drop"
                            MouseLeftButtonDown="BoardCell_MouseLeftButtonDown">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                        <!-- Красивая зеленая подсветка с градиентом -->
                                        <Setter Property="BorderBrush">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#4CAF50" Offset="0.0" />
                                                    <GradientStop Color="#8BC34A" Offset="1.0" />
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="BorderThickness" Value="3" />
                                        <!-- Добавим тень для улучшения эффекта -->
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#4CAF50" ShadowDepth="0" BlurRadius="10" Opacity="0.7" />
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock
                            FontSize="40"
                            FontFamily="Segoe UI Symbol"
                            FontWeight="Bold"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            TextWrapping="NoWrap">

                            <!-- Piece symbol with fallback values for null handling -->
                            <TextBlock.Text>
                                <MultiBinding Converter="{StaticResource PieceConverter}" ConverterParameter="text" FallbackValue="">
                                    <Binding Path="Piece.Color" FallbackValue=""/>
                                    <Binding Path="Piece.Type" FallbackValue=""/>
                                </MultiBinding>
                            </TextBlock.Text>

                            <!-- Piece color with fallback -->
                            <TextBlock.Foreground>
                                <MultiBinding Converter="{StaticResource PieceConverter}" ConverterParameter="fill" FallbackValue="Black">
                                    <Binding Path="Piece.Color" FallbackValue=""/>
                                    <Binding Path="Piece.Type" FallbackValue=""/>
                                </MultiBinding>
                            </TextBlock.Foreground>

                            <!-- Piece outline with fallback -->
                            <TextBlock.TextEffects>
                                <TextEffect>
                                    <TextEffect.Foreground>
                                        <MultiBinding Converter="{StaticResource PieceConverter}" ConverterParameter="stroke" FallbackValue="Transparent">
                                            <Binding Path="Piece.Color" FallbackValue=""/>
                                            <Binding Path="Piece.Type" FallbackValue=""/>
                                        </MultiBinding>
                                    </TextEffect.Foreground>
                                </TextEffect>
                            </TextBlock.TextEffects>
                        </TextBlock>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Control panel -->
        <StackPanel Grid.Column="1" Grid.Row="1" Margin="10">
            <Button Content="Нова Гра" Click="StartNewGame_Click" Margin="5"/>
            <Button Content="Очистити Дошку" Click="ClearBoard_Click" Margin="5"/>
            <Button Content="Режим 2 Гравці" Click="SetTwoPlayersMode_Click" Margin="5"/>
            <Button Content="Режим проти Комп'ютера" Click="SetComputerMode_Click" Margin="5"/>
            <ComboBox x:Name="DifficultyComboBox" Margin="5" Visibility="Collapsed" SelectionChanged="DifficultyComboBox_SelectionChanged">
                <ComboBoxItem Content="Випадковий" Tag="Random"/>
                <ComboBoxItem Content="Легкий" Tag="Easy"/>
                <ComboBoxItem Content="Середній" Tag="Medium"/>
                <ComboBoxItem Content="Складний" Tag="Hard"/>
                <ComboBoxItem Content="Експерт" Tag="Expert"/>
            </ComboBox>
            <Button Content="Зберегти Позицію" Click="SavePosition_Click" Margin="5"/>
            <Button Content="Завантажити Позицію" Click="LoadPosition_Click" Margin="5"/>
            <Button Content="Розставити фігури самостійно" Click="SetupPosition_Click"  Margin="5"/>
            <StackPanel Orientation="Horizontal"
                    Visibility="{Binding IsComputerMode, 
                                         Converter={StaticResource BooleanToVisibility}}">
                <RadioButton x:Name="PlayAsWhiteRadioButton" 
                         Content="Грати за білих" 
                         IsChecked="True"
                         Checked="PlayerColorRadioButton_Checked"
                         Margin="5"/>
                <RadioButton x:Name="PlayAsBlackRadioButton" 
                         Content="Грати за чорних"
                         Checked="PlayerColorRadioButton_Checked"
                         Margin="5"/>
            </StackPanel>
            <CheckBox x:Name="FlipBoardCheckBox" Content="Перевернути Дошку" Checked="FlipBoardCheckBox_Checked" Unchecked="FlipBoardCheckBox_Checked" Margin="5"/>
        </StackPanel>

        <!-- Status bar -->
        <TextBlock x:Name="StatusTextBlock" Grid.Column="0" Grid.Row="0" Text="Статус гри" Margin="10"/>
        <TextBlock x:Name="GameResultTextBlock" Grid.Column="0" Grid.Row="2" Text="{Binding GameResultText}" Margin="10"/>

        <!-- Chess clocks -->
        <StackPanel Grid.Column="2" Grid.Row="1" Margin="10,10,10,10">
            <TextBlock Text="Час Білих:" FontWeight="Bold" Margin="5"/>
            <TextBlock x:Name="WhiteTimeTextBlock" Text="00:30:00" Margin="5"/>
            <TextBlock Text="Час Чорних:" FontWeight="Bold" Margin="5"/>
            <TextBlock x:Name="BlackTimeTextBlock" Text="00:30:00" Margin="5"/>
        </StackPanel>

        <!-- Move history -->
        <ListBox x:Name="MoveHistoryListBox" Grid.Column="1" Grid.Row="1" Margin="5,0,10,10" Height="290" VerticalAlignment="Bottom"/>
    </Grid>
</Window>