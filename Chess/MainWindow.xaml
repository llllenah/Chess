<Window x:Class="ChessTrainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chess Trainer" Height="550" Width="550">
    <Grid>
        <!-- ComboBox для вибору теми -->
        <ComboBox Name="ThemeSelector" SelectionChanged="OnThemeChanged"
              HorizontalAlignment="Left" VerticalAlignment="Top"
              Margin="10" Width="120">
            <ComboBoxItem Content="Класична" IsSelected="True"/>
            <ComboBoxItem Content="Синя"/>
            <ComboBoxItem Content="Зелена"/>
        </ComboBox>

        <!-- Canvas для шахової дошки -->
        <Canvas Name="ChessBoardCanvas" Width="480" Height="480"
            VerticalAlignment="Center" HorizontalAlignment="Center"
            Margin="0,40,0,0"/>
    </Grid>

</Window>
